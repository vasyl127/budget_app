<section>
  <div class="mt-5 px-5 close"><%= link_to "X", category_path(@category) %></div>
    <span class="nav-item">
      <%= link_to categories_path do %>
        <i class="fas fa-chevron-left text-white"></i>
      <% end %>
    </span>
    <div class="sign-wrap">
    <h3 class="md-heading text-center mb-3">EDIT COST</h3>
    <div class="fs-4 sign-card">
      <%= form_with model: [@category, @cost]  do |f| %>
  
        <div class="group mb-3">
          <span class="icon-input"><%= fa_icon "user" %></span>
          <%= f.text_field :name, required: true, placeholder: "Name", autofocus: true, autocomplete: "name", class: "email-move" %>
        </div>
        <div class="group mb-3">
          <span class="icon-input"><%= fa_icon "user" %></span>
          <%= f.text_field :value, placeholder: "Value", autofocus: true, autocomplete: "Value", class: "email-move" %>
        </div> 
  
        <div class="group mb-3">
          <%= f.collection_select(:category_ids, Category.all, :id, :name, { prompt: true }, { multiple: true, required: true })%>
        </div>
        <%= f.submit "ADD", data: {disable_with: "Adding..."}, class: "signup-btn my-4 py-2" %>
      <% end %>
    </div>
  </div>
</section>