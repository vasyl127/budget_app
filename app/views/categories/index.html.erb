<%= render 'shared/cardform' %>
<div style="width: 450px;" class="center">
  <%= render 'shared/second_buttons' %>
  <% if @categories.blank? %>
    <p class="text-center md-heading mt-5" ><%= t('.blank') %> <br/> <%= t('.add') %></p>
  <% else %>
    <h2 class="text-left md-heading"> <%= t('.title') %> </h2>
    <ul class="cat-list md-heading">
    <%= render @categories %>
    </ul>
  <% end %>
</div>


