<div class="container preload">
    <div class="d-flex justify-content-around align-items-center" >
        <div class="user-icon me-2">
            <%= link_to 'user_profile' do %>
            <div><%= fa_icon "user-circle" %></div>
            <% end %>
        </div>
        <h3 class="md-heading"><%= current_user.name.humanize %></h3>
    </div>
    <%= render 'shared/creditcard' %>
</div>

<div class="d-flex justify-content-around align-items-center devise-class my-4">

    <div class="d-flex justify-content-around align-items-center mt-3" >
        <div class="user-icon me-2 text-center">
            <%= link_to costs_path do %>
                <div><%= fa_icon "money" %></div>
            <% end %>
            <p class="fs-6">Costs</p>
        </div>
        <div class="user-icon me-2 text-center">
            <%= link_to categories_path do %>
                <div><%= fa_icon "list" %></div>
            <% end %>
            <p class="fs-6">Categories</p>
        </div>
        <div class="user-icon me-2 text-center">
            <%= link_to 'balance/new' do %>
                <div><%= fa_icon "credit-card" %></div>
            <% end %>
            <p class="fs-6">Balance</p>
        </div>
        <div class="user-icon me-2 text-center">
            <%= link_to 'user_profile' do %>
                <div><%= fa_icon "bar-chart" %></div>
            <% end %>
            <p class="fs-6">Exchange rate</p>
        </div>
    </div>

</div>